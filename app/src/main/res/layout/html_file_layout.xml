<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="WebViewLayout">

    <WebView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/html_code_view"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="USE"
        android:id="@+id/Use_file"
        app:layout_constraintStart_toStartOf="@+id/html_code_view"
        app:layout_constraintEnd_toEndOf="@+id/html_code_view"
        app:layout_constraintBottom_toBottomOf="@+id/html_code_view"
        />


</androidx.constraintlayout.widget.ConstraintLayout>